{
	"name": "rspec-debug",
	"displayName": "rspec-debug",
	"description": "Run RSpec specs on Debug Console",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.runActiveSpec",
		"onCommand:extension.runActiveSpecAtLine",
		"onCommand:extension.runAllSpecs"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runActiveSpec",
				"title": "Rspec Debug: Debug Active Spec File"
			},
			{
				"command": "extension.runActiveSpecAtLine",
				"title": "Rspec Debug: Debug Active Spec at current line"
			},
			{
				"command": "extension.runAllSpecs",
				"title": "Rspec Debug: Run All Specs in Project"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
